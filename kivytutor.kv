<KivyTutorRoot>:
    orientation: "vertical"

    ActionBar:
        ActionView:
            ActionPrevious:
                title: ""
                with_previous: False
            ActionOverflow:
                ActionButton:
                    text: "Settings"
                    on_press: app.open_settings()


    ScreenManager:
        id: kivy_screen_manger
        StartScreen:
            name: "start_screen"


<StartScreen@Screen>:
    BoxLayout:
        # Settingsf
        orientation: "vertical"
        padding: root.width * .02, root.height * .02
        spacing: min(root.width, root.height) * .02

        Label:
            text: "[b]Kivy Math Tutor[/b]"
            markup: True

        Button:
            text: "Addition"
        Button:
            text: "Subtraction"
        Button:
            text: "Multiplication"
        Button:
            text: "Division"
        Button:
            text: "Mix!"
        Button:
            text: "About this App"
